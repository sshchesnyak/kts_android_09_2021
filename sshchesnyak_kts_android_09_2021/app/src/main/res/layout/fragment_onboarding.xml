<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/SubTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/subtext"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/BlankViewTop" />

    <TextView
        android:id="@+id/BlankViewTop"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/ImageBorderView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/SubTextView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ImageBorderView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        app:cardCornerRadius="250dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/LoginButtonView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SubTextView">

        <ImageView
            android:id="@+id/LogoView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/BlankViewBottom"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/ImageBorderView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/LoginButtonView" />

    <Button
        android:id="@+id/LoginButtonView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/button_text"
        app:layout_constraintTop_toTopOf="@+id/ImageBorderView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>